<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="TuentiTvTheme" parent="@style/Theme.Leanback">
    <item name="android:windowBackground">@color/primary_color</item>
  </style>

  <style name="TuentiTvTheme.DialogActivity" parent="@style/Theme.Leanback">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/third_color_transparent</item>
  </style>

  <style name="AppLogo">
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:src">@drawable/icn_application_transparent_bg</item>
  </style>

  <style name="BigProgressBar" parent="Widget.AppCompat.ProgressBar">
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_margin">@dimen/progress_bar_margin</item>
  </style>

</resources>
